{
  "name": "node-typescript-starter",
  "version": "1.0.0",
  "description": "This is a very stripped down base project to get started with Node/Typescript",
  "main": "index.js",
  "scripts": {
    "test": "jest",
    "coverage": "jest --coverage",
    "lint": "eslint \"{src,test}/**/*.{js,ts}\"",
    "lint-fix": "yarn lint -- --fix",
    "torm:revert": "ts-node --files -r tsconfig-paths/register ./node_modules/.bin/typeorm migration:revert",
    "torm:create": "ts-node --files -r tsconfig-paths/register ./node_modules/.bin/typeorm migration:create",
    "torm:gen": "ts-node --files -r tsconfig-paths/register ./node_modules/.bin/typeorm migration:generate",
    "torm:run": "ts-node --files -r tsconfig-paths/register ./node_modules/.bin/typeorm migration:run",
    "start": "ts-node --files -r tsconfig-paths/register src/index.ts",
    "dev": "ts-node-dev --files -r tsconfig-paths/register src/index.ts",
    "build": "tsc && yarn copy-assets",
    "prepare": "cd .. && husky install server/.husky",
    "copy-assets": "copyfiles -u 1 src/assets/**/* dist/assets/ && copyfiles -u 1 src/ssl/**/* dist/ssl/"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jmw5598/node-typescript-starter.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/jmw5598/node-typescript-starter/issues"
  },
  "homepage": "https://github.com/jmw5598/node-typescript-starter#readme",
  "dependencies": {
    "better-sqlite3": "^9.1.1",
    "body-parser": "^1.19.0",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "date-fns": "^2.30.0",
    "dotenv": "^16.3.1",
    "express": "^4.17.1",
    "jsonwebtoken": "^9.0.2",
    "md5": "^2.3.0",
    "reflect-metadata": "^0.1.13",
    "typeorm": "^0.3.17"
  },
  "devDependencies": {
    "@types/body-parser": "^1.19.5",
    "@types/cors": "^2.8.16",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.8",
    "@types/jsonwebtoken": "^9.0.4",
    "@types/md5": "^2.3.5",
    "@types/node": "^20.9.0",
    "@typescript-eslint/eslint-plugin": "^6.10.0",
    "@typescript-eslint/parser": "^6.10.0",
    "copyfiles": "^2.4.1",
    "eslint": "^8.53.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.1",
    "husky": "^8.0.3",
    "jest": "^29.7.0",
    "lint-staged": "^15.0.2",
    "nodemon": "^3.0.1",
    "prettier": "^3.0.3",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "ts-node-dev": "^2.0.0",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.2.2",
    "winston": "^3.11.0"
  },
  "lint-staged": {
    "*.ts": "yarn lint"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "yarn test"
    }
  }
}
