{
  "name": "node-typescript-starter",
  "version": "1.0.0",
  "description": "This is a very stripped down base project to get started with Node/Typescript",
  "main": "index.js",
  "scripts": {
    "test": "jest",
    "coverage": "jest --coverage",
    "lint": "eslint \"{src,test}/**/*.{js,ts}\"",
    "lint-fix": "yarn lint -- --fix",
    "migrations:gen": "ts-node ./node_modules/.bin/typeorm migration:generate",
    "migrations:run": "ts-node ./node_modules/.bin/typeorm migration:run",
    "start": "ts-node r tsconfig-paths/register src/index.ts",
    "dev": "ts-node-dev -r tsconfig-paths/register src/index.ts",
    "build": "tsc"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jmw5598/node-typescript-starter.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/jmw5598/node-typescript-starter/issues"
  },
  "homepage": "https://github.com/jmw5598/node-typescript-starter#readme",
  "dependencies": {
    "body-parser": "^1.19.0",
    "cors": "^2.8.5",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "reflect-metadata": "^0.1.13",
    "sqlite3": "^5.1.6",
    "typeorm": "^0.2.24"
  },
  "devDependencies": {
    "@types/body-parser": "^1.19.0",
    "@types/cors": "^2.8.6",
    "@types/express": "^4.17.3",
    "@types/jest": "^29.5.2",
    "@types/node": "^13.9.6",
    "@typescript-eslint/eslint-plugin": "^2.25.0",
    "@typescript-eslint/parser": "^2.25.0",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.10.1",
    "eslint-plugin-prettier": "^3.1.2",
    "husky": "^4.2.3",
    "jest": "^29.5.0",
    "lint-staged": "^10.1.0",
    "nodemon": "^2.0.22",
    "prettier": "^2.0.2",
    "ts-jest": "^29.5.0",
    "ts-node": "^10.9.1",
    "ts-node-dev": "^2.0.0",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.1.3"
  },
  "lint-staged": {
    "*.ts": "yarn lint"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "yarn test"
    }
  }
}