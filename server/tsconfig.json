{
  "compilerOptions": {
    "target": "es6",                         
    "module": "commonjs",                    
    "strict": true,                          
    "esModuleInterop": true,                  
    "noImplicitAny": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "declaration": true,
    "outDir": "dist",
    "baseUrl": "src",
    "forceConsistentCasingInFileNames": true, 
    "strictPropertyInitialization": false,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "paths": {
      "@utils/*": ["app/utils/*"]
    }
  },
  "include": ["src/**/*", "tests"],
  "exclude": ["node_modules"]
}
